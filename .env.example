# ======================
# Backend Configuration
# ======================
# Non-sensitive application configuration
# Safe to commit to version control and share with team

# LLM Configuration
LLM_SINGLE_PASS_THRESHOLD=15  # Max entries for single-pass strategy
LLM_TOP_K_CANDIDATES=3        # Number of candidates from Pass 1
LLM_MAX_RETRIES=2             # Max LLM retries for invalid output

# HAR Upload & Filtering
MAX_HAR_SIZE_MB=100           # Max .har file size in MB
MAX_HAR_ENTRIES=500           # Max number of entries to process
BODY_TRUNCATE_LIMIT=10000     # Max chars for request/response bodies

# Session Management
SESSION_STORE_TTL_MINUTES=30  # Session expiration time

# Rate Limiting
THROTTLE_TTL=60               # Throttle time window (seconds)
THROTTLE_LIMIT=10             # Max requests per TTL window

# Server
PORT=3001
NODE_ENV=development

# ======================
# Frontend Configuration
# ======================

# Backend API URL for Next.js rewrites
# Development: http://localhost:3001
# Production: Set to your deployed backend URL (e.g., https://api.yourdomain.com)
BACKEND_URL=http://localhost:3001
